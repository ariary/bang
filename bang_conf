# Configure envvar before pentest
# as it is short you could source it in ~/bashrc

## Change Target IP (Addr) envvar
cTA(){
    eval export TA=$1
}

## Change Target port envvar
cTP(){
    eval export TP=$1
}

## Change Attacker IP (Addr) envvar
cAA(){
    eval export AA=$1
}

## Change Attacker port envvar
cAP(){
    eval export AP=$1
}

## Interactiv conf
bang.conf.pentest(){
    echo "Enter Attacker IP: "
    read ATT_ADDR
    cAA ${ATT_ADDR}
    echo "Enter Attacker PORT: "
    read ATT_PORT
    cAP ${ATT_PORT}
    echo "Enter Target IP: "
    read TAR_ADDR
    cTA ${TAR_ADDR}
    echo "Enter Target PORT: "
    read TAR_PORT
    cTP ${TAR_PORT}
}

## Current conf
alias 'bang.conf.pentest.map=echo "ðŸ˜ˆ ($AA $AP) [ATTACKER] Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â»Â» ðŸ˜‡ ($TA $TP) [TARGET]"'

##Update conf
bang.conf.update(){
    git clone git clone https://github.com/ariary/bang.git && cd bang
    cp bang $HOME/.bang
    cp bang_conf $HOME/.bang
    cp -r ./install/ $HOME/.bang
    cd .. && rm -rf bang
}

##Install modules/tools
alias 'bang.conf.install=$HOME/.bang/install/install-tools.sh'
alias 'bang.conf.install-ariary=$HOME/.bang/install/install-ariary.sh'

##Load shortcuts
alias bang='source ~/.bang/bang'
